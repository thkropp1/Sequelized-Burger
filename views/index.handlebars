<div class="center">
  <div class="row">
    <p><img src="/assets/img/burger.gif" alt="burger" height="200" width="200"></p>
    <h1><p> CHOMP DA BURGER! <p></h1>
  </div>
</div>

<div class="row">
  <div class="container" class="col-m4">
    <h2>Burgers that are not eaten:</h2>
    <h4><ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn waves-effect waves-light">Chomp Da Burger!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ol></h4>
  </div>

  <div class="container" class="col-m4">
    <h2>Place your new burger order here:</h2>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <h3><label for="burger">New Burger Name:</label><h3>
    <input type="text" id="burger" name="burger_name" required>
  </div>
    <button type="submit" class="btn waves-effect waves-light">Place order</button>
</form>
</div>

<div class="container" class="col-m4">
<h2>Burgers that are eaten:</h2>
<h4><ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol></h4>
</div>
</div>

